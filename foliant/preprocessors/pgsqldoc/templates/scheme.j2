    @startuml
{% for table in tables %}
    object {{ table['relname'] }} {
{% for column in table['columns'] -%}
{{ column['column_name']|indent(8) }} [{{ column['data_type'] }}]
{% endfor %}{# {% for column in table['columns'] %} #}
}{% endfor %}{# {% for table in tables %} #}

